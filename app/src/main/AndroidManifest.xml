<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.instinctools.megamag">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ticket_details.TicketDetailsActivity" />
        <activity android:name=".presentation.info.InfoActivity" />
        <activity android:name=".presentation.theater_details.TheaterDetailsActivity" />
        <activity android:name=".presentation.profile.ProfileActivity" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".presentation.auth.AuthActivity"
            android:label="@string/title_activity_auth"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>