<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/announcement_cover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                tools:ignore="ContentDescription" />
        </android.support.percent.PercentFrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/announcement_card_items_padding"
            android:paddingLeft="@dimen/announcement_card_items_padding"
            android:paddingRight="@dimen/announcement_card_items_padding"
            android:paddingTop="@dimen/card_view_items_top_padding">

            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/announcement_card_text_primary" />

            <TextView
                android:id="@+id/announcement_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/card_view_subtitle_top_padding"
                android:textSize="@dimen/announcement_card_text_sub" />

            <TextView
                android:id="@+id/announcement_details_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="@dimen/announcement_card_items_padding"
                android:textSize="@dimen/card_view_text_support" />

            <TextView
                android:id="@+id/announcement_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ellipsize="end"
                android:maxLines="8"
                android:paddingTop="@dimen/announcement_card_items_padding"
                android:textSize="@dimen/card_view_text_support" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>