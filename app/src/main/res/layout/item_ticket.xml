<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    tools:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ticket_cover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                tools:ignore="ContentDescription"
                tools:src="@drawable/logo"/>

        </android.support.percent.PercentFrameLayout>

        <TextView
            android:id="@+id/ticket_title_view"
            style="@style/CardViewTicketTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Форсаж 8 16+ 3D Atmos"/>

        <TextView
            android:id="@+id/ticket_begin_with_view"
            style="@style/CardViewTicketSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="билеты с 21/04/2017"/>

    </LinearLayout>

</android.support.v7.widget.CardView>