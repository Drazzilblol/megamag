<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/announcement_cover"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="178%"
                app:layout_widthPercent="100%"
                tools:ignore="ContentDescription"
                tools:src="@drawable/splash" />

        </android.support.percent.PercentFrameLayout>

        <TextView
            android:id="@+id/announcement_place"
            style="@style/AnnouncementCardSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Анонсы" />

        <TextView
            android:id="@+id/announcement_title"
            style="@style/AnnouncementCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Стражи Галактики. Часть 2" />

        <TextView
            android:id="@+id/announcement_details_view"
            style="@style/AnnouncementCardDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Год: 2017 Страна: США" />

        <TextView
            android:id="@+id/announcement_description_view"
            style="@style/AnnouncementCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Все в сборе: землянин Питер Квилл (Звездный Лорд), молчаливый громила Дракс, зеленокожая наемница Гамора, живое дерево Грут и говорящий енот. " />

    </LinearLayout>

</android.support.v7.widget.CardView>