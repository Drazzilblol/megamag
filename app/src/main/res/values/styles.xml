<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MainTheme" parent="AppTheme"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseAnnouncementCardViewItem">
        <item name="android:layout_marginLeft">@dimen/announcement_card_items_padding</item>
        <item name="android:layout_marginRight">@dimen/announcement_card_items_padding</item>
        <item name="android:textSize">@dimen/announcement_card_text_support</item>
        <item name="android:textColor">@color/announcement_text_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AnnouncementCardTitle" parent="BaseAnnouncementCardViewItem">
        <item name="android:textColor">@color/announcement_text_primary</item>
        <item name="android:textSize">@dimen/announcement_card_text_primary</item>
    </style>

    <style name="AnnouncementCardSubtitle" parent="BaseAnnouncementCardViewItem">
        <item name="android:textColor">@color/announcement_text_disabled</item>
        <item name="android:textSize">@dimen/announcement_card_text_sub</item>
        <item name="android:layout_marginTop">@dimen/announcement_card_items_top_padding</item>
    </style>

    <style name="AnnouncementCardDetails" parent="BaseAnnouncementCardViewItem">
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginTop">@dimen/announcement_card_items_padding</item>
    </style>

    <style name="AnnouncementCardDescription" parent="BaseAnnouncementCardViewItem">
        <item name="android:maxLines">8</item>
        <item name="android:layout_marginTop">@dimen/announcement_card_items_padding</item>
    </style>

    <style name="BaseTicketCardViewItem">
        <item name="android:layout_marginLeft">@dimen/announcement_card_items_padding</item>
        <item name="android:layout_marginRight">@dimen/announcement_card_items_padding</item>
        <item name="android:textSize">@dimen/ticket_card_text_sub</item>
        <item name="android:textColor">@color/announcement_text_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardViewTicketTitle" parent="BaseTicketCardViewItem">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/ticket_text_primary</item>
        <item name="android:textSize">@dimen/ticket_card_text_primary</item>
        <item name="android:layout_marginTop">@dimen/ticket_card_items_top_padding</item>
    </style>

    <style name="CardViewTicketSubtitle" parent="BaseTicketCardViewItem">
        <item name="android:layout_marginBottom">@dimen/ticket_card_items_padding</item>
    </style>

    <style name="InfoGroupTitleView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/info_group_text</item>
        <item name="android:textColor">@color/group_text_primary</item>
    </style>

    <style name="InfoGroupImage">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InfoTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/info_text</item>
        <item name="android:textColor">@color/info_text_secondary</item>
    </style>

    <style name="InfoView">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">@dimen/info_left_padding</item>
    </style>

    <style name="BaseNavHeaderItem">
        <item name="android:textColor">@color/nav_header_text_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NavHeaderName" parent="BaseNavHeaderItem"></style>

    <style name="NavHeaderEmail" parent="BaseNavHeaderItem">
        <item name="android:textColor">@color/nav_header_text_secondary</item>
    </style>

    <style name="NavHeaderProfile" parent="BaseNavHeaderItem">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_margin">@dimen/nav_header_item_margin</item>
    </style>

    <style name="NavHeaderDropdownButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/nav_header_dropdown_button_margin</item>
    </style>
</resources>
